{% extends 'base.html.twig' %}

{% block title %}Hello AuthController!{% endblock %}


{% block stylesheets %}
    <style>
        #content {
            max-width: 300px;
            margin: 50px auto;
        }
        .dropdown-menu {
            display: initial;
            position: initial;
        }
    </style>
{% endblock %}
{% block body %}

    <div id="content">
        <div class="dropdown-menu">
            <form class="px-4 py-3" action="{{ path('admin_auth_check_login') }}" method="POST">
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" email="email" placeholder="email@example.com">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <a class="dropdown-item" href="#">Forgot password?</a>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>

            <div class="dropdown-divider"></div>

            <a class="btn btn-block btn-social btn-facebook" href="{{ path('admin_auth_facebook_login') }}" target="_blank">
                <span class="fa fa-facebook"></span> Sign in with Facebook
            </a>

            <a class="btn btn-block btn-social btn-linkedin" href="{{ path('admin_auth_linkedin_login') }}"  target="_blank">
                <span class="fa fa-linkedin"></span> Sign in with LinkedIn
            </a>
        </div>
    </div>

{% endblock %}
